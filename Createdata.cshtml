@model WebApplicationRevisionCRUD.Models.Class1Model

@using (Html.BeginForm("Createdata", "Home", FormMethod.Post))
{
    <div>
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />


        <div class="form-group">
            <label>email_id</label>
            @Html.TextBoxFor(model => model.email_id, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <br />


        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />


        <div class="form-group">
            <label>Gender</label>
            @Html.TextBoxFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />


        <div class="form-group">
            <label>salary</label>
            @Html.TextBoxFor(model => model.salary, new { htmlAttributes = new { @class = "form-control" }} )
        </div>
        <br />

        <div class="form-group">
            <label>contact</label>
            @Html.TextBoxFor(model => model.contact_No, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
    </div>

    <button class="btn btn-outline-success" type="submit">Submit</button>






}